# ======================================
# Delta Terminal Environment Variables
# ======================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ======================================
# Application
# ======================================
NODE_ENV=development
APP_NAME=delta-terminal
APP_URL=http://localhost:3000
API_URL=http://localhost:4000

# ======================================
# Authentication
# ======================================
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this
REFRESH_TOKEN_EXPIRES_IN=30d

# ======================================
# Database - PostgreSQL
# ======================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=delta
POSTGRES_PASSWORD=delta_secret
POSTGRES_DB=delta_terminal
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ======================================
# Database - TimescaleDB (Time-series)
# ======================================
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_USER=delta_ts
TIMESCALE_PASSWORD=delta_ts_secret
TIMESCALE_DB=delta_timeseries
TIMESCALE_URL=postgresql://${TIMESCALE_USER}:${TIMESCALE_PASSWORD}@${TIMESCALE_HOST}:${TIMESCALE_PORT}/${TIMESCALE_DB}

# ======================================
# Cache - Redis
# ======================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=delta_redis
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# ======================================
# Message Queue - RabbitMQ
# ======================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=delta
RABBITMQ_PASSWORD=delta_rabbit
RABBITMQ_URL=amqp://${RABBITMQ_USER}:${RABBITMQ_PASSWORD}@${RABBITMQ_HOST}:${RABBITMQ_PORT}

# ======================================
# AI Services
# ======================================
# Anthropic Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key

# OpenAI (fallback/alternative)
OPENAI_API_KEY=your-openai-api-key

# Vector Database - Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=delta-strategies

# Local Vector DB - Qdrant (development)
QDRANT_HOST=localhost
QDRANT_PORT=6333

# ======================================
# Exchange APIs
# ======================================
# Binance
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key
BINANCE_TESTNET=true

# OKX
OKX_API_KEY=your-okx-api-key
OKX_SECRET_KEY=your-okx-secret-key
OKX_PASSPHRASE=your-okx-passphrase
OKX_SANDBOX=true

# Bybit
BYBIT_API_KEY=your-bybit-api-key
BYBIT_SECRET_KEY=your-bybit-secret-key
BYBIT_TESTNET=true

# ======================================
# Monitoring
# ======================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=delta_grafana

# ======================================
# Logging
# ======================================
LOG_LEVEL=debug
LOG_FORMAT=pretty

# ======================================
# Rate Limiting
# ======================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ======================================
# CORS
# ======================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ======================================
# Encryption
# ======================================
ENCRYPTION_KEY=your-32-byte-encryption-key-here
ENCRYPTION_IV=your-16-byte-iv-here
