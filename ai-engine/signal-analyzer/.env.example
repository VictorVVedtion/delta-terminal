# Signal Analyzer 环境配置

# 服务配置
SERVICE_NAME=signal-analyzer
SERVICE_VERSION=0.1.0
PORT=8007
LOG_LEVEL=INFO

# JWT 配置
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256

# Redis 配置（缓存技术指标计算结果）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=2
REDIS_PASSWORD=

# 信号配置
SIGNAL_CACHE_TTL=300  # 信号缓存时间（秒）
INDICATOR_CACHE_TTL=600  # 指标缓存时间（秒）

# 技术指标默认参数
RSI_PERIOD=14
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
MA_SHORT=20
MA_LONG=50
BB_PERIOD=20
BB_STD=2

# 信号阈值
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70
SIGNAL_CONFIDENCE_THRESHOLD=0.6
