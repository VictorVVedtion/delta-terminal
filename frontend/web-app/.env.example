# Delta Terminal Web 应用环境变量配置示例
# 复制此文件为 .env.local 并根据实际情况修改

# ============================================
# API 配置
# ============================================

# 后端 API 地址
NEXT_PUBLIC_API_URL=http://localhost:4000/api

# WebSocket 服务地址
NEXT_PUBLIC_WS_URL=ws://localhost:4000

# ============================================
# 应用配置
# ============================================

# 应用名称
NEXT_PUBLIC_APP_NAME=Delta Terminal

# 应用版本
NEXT_PUBLIC_APP_VERSION=0.1.0

# 应用环境 (development | staging | production)
NEXT_PUBLIC_APP_ENV=development

# ============================================
# 功能开关
# ============================================

# 启用调试模式
NEXT_PUBLIC_DEBUG=true

# 启用 WebSocket 日志
NEXT_PUBLIC_WS_DEBUG=true

# 启用 API 请求日志
NEXT_PUBLIC_API_DEBUG=true

# ============================================
# 后端服务配置
# ============================================

# Python 回测引擎 API 地址（Railway 部署后设置）
# 不设置则使用内置 Mock 数据
# BACKTEST_ENGINE_URL=https://your-backtest-engine.railway.app

# NLP 处理器 API 地址（Railway 部署后设置）
# NLP_ENGINE_URL=https://your-nlp-engine.railway.app

# ============================================
# 第三方服务配置（可选）
# ============================================

# TradingView 图表库
# NEXT_PUBLIC_TRADINGVIEW_LIBRARY_PATH=/charting_library/

# Sentry 错误追踪
# NEXT_PUBLIC_SENTRY_DSN=

# Google Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID=

# ============================================
# 交易配置
# ============================================

# 默认交易对
NEXT_PUBLIC_DEFAULT_SYMBOL=BTC/USDT

# 默认时间周期
NEXT_PUBLIC_DEFAULT_TIMEFRAME=1D

# 订单簿深度
NEXT_PUBLIC_ORDERBOOK_DEPTH=20

# ============================================
# WebSocket 配置
# ============================================

# 重连最大尝试次数
NEXT_PUBLIC_WS_MAX_RECONNECT_ATTEMPTS=5

# 重连延迟（毫秒）
NEXT_PUBLIC_WS_RECONNECT_DELAY=1000

# ============================================
# 性能配置
# ============================================

# API 请求超时（毫秒）
NEXT_PUBLIC_API_TIMEOUT=30000

# 刷新间隔（毫秒）
NEXT_PUBLIC_REFRESH_INTERVAL=5000

# ============================================
# 注意事项
# ============================================
# 1. 所有以 NEXT_PUBLIC_ 开头的变量会暴露到浏览器端
# 2. 敏感信息（如 API 密钥）不要使用 NEXT_PUBLIC_ 前缀
# 3. 生产环境请务必修改所有默认值
# 4. .env.local 文件不应提交到版本控制系统
