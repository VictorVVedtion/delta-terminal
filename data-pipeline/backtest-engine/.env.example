# 应用配置
APP_NAME="Delta Terminal - Backtest Engine"
APP_VERSION="0.1.0"
DEBUG=false
HOST=0.0.0.0
PORT=8003

# API配置
API_PREFIX=/api/v1
CORS_ORIGINS=["*"]

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=3
REDIS_PASSWORD=

# 数据库配置
DATABASE_URL=postgresql://user:password@localhost:5432/delta_backtest

# 回测引擎配置
DEFAULT_INITIAL_CAPITAL=100000.0
DEFAULT_COMMISSION=0.001
DEFAULT_SLIPPAGE=0.0005
MAX_CONCURRENT_BACKTESTS=4
BACKTEST_TIMEOUT_SECONDS=300

# 数据存储配置
DATA_CACHE_TTL=3600
MAX_DATA_POINTS=1000000

# 性能优化配置
ENABLE_NUMBA=true
PARALLEL_PROCESSING=true
CHUNK_SIZE=10000

# 报告配置
REPORT_OUTPUT_DIR=./reports
ENABLE_HTML_REPORT=true
ENABLE_PDF_REPORT=false
ENABLE_EXCEL_REPORT=true

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/backtest-engine.log
