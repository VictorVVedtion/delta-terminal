# 服务配置
NODE_ENV=development
PORT=3002
HOST=0.0.0.0

# 数据库配置
DATABASE_URL=postgresql://postgres:password@localhost:5432/delta_strategy

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# 日志配置
LOG_LEVEL=info

# CORS 配置
CORS_ORIGIN=*

# 限流配置
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute

# 策略配置
MAX_STRATEGIES_PER_USER=50
MAX_ACTIVE_STRATEGIES=10
DEFAULT_MAX_ORDERS=10
DEFAULT_ORDER_INTERVAL=60
MAX_VERSIONS_TO_KEEP=10

# 分享码配置
SHARE_CODE_LENGTH=8
SHARE_CODE_EXPIRES_IN=2592000000

# 外部服务
AUTH_SERVICE_URL=http://localhost:3001
TRADING_ENGINE_URL=http://localhost:3003
DATA_SERVICE_URL=http://localhost:3004
