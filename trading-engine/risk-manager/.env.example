# Risk Manager Environment Variables

# 应用配置
APP_NAME="Delta Terminal Risk Manager"
APP_VERSION="0.1.0"
APP_ENV="development"
DEBUG=true
API_PREFIX="/api/v1"

# 服务器配置
HOST="0.0.0.0"
PORT=8004

# Redis 配置
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""
REDIS_PREFIX="risk:"

# JWT 配置
JWT_SECRET_KEY="your-secret-key-change-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# 风控限制配置
MAX_POSITION_SIZE_USDT=100000.0
MAX_TOTAL_POSITION_USDT=500000.0
MAX_POSITION_CONCENTRATION=0.3

MAX_ORDER_SIZE_USDT=50000.0
MIN_ORDER_SIZE_USDT=10.0
MAX_ORDERS_PER_MINUTE=100
MAX_ORDERS_PER_SYMBOL_MINUTE=20

MAX_DAILY_LOSS_USDT=10000.0
MAX_DAILY_LOSS_PERCENTAGE=0.05
MAX_DRAWDOWN_PERCENTAGE=0.15
MAX_CONSECUTIVE_LOSSES=5

MAX_LEVERAGE=10.0
DEFAULT_LEVERAGE=3.0

# 监控配置
POSITION_CHECK_INTERVAL_SECONDS=5
PNL_CHECK_INTERVAL_SECONDS=10
RISK_REPORT_INTERVAL_SECONDS=60

# 告警配置
ALERT_WEBHOOK_URL=""
ALERT_EMAIL_ENABLED=false
ALERT_SMS_ENABLED=false

# 紧急止损配置
EMERGENCY_STOP_ENABLED=true
EMERGENCY_STOP_DRAWDOWN=0.20
EMERGENCY_STOP_DAILY_LOSS=15000.0

# 外部服务配置
ORDER_EXECUTOR_URL="http://localhost:8003"
EXCHANGE_CONNECTOR_URL="http://localhost:8002"

# 日志配置
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# CORS 配置
CORS_ORIGINS='["http://localhost:3000","http://localhost:3001"]'
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS='["*"]'
CORS_ALLOW_HEADERS='["*"]'
