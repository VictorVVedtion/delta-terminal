# 应用配置
APP_NAME="Delta Terminal - Exchange Connector"
APP_VERSION="0.1.0"
DEBUG=false
HOST=0.0.0.0
PORT=8003

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# WebSocket 配置
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=10
WS_RECONNECT_DELAY=5
WS_MAX_RECONNECT_ATTEMPTS=10

# 连接器配置
CONNECTOR_TIMEOUT=30
CONNECTOR_RATE_LIMIT=true
CONNECTOR_POOL_SIZE=10

# API 密钥加密（必须是32字节的base64编码）
# 生成方式: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS 配置
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# 缓存配置（秒）
MARKET_CACHE_TTL=60
TICKER_CACHE_TTL=5
ORDERBOOK_CACHE_TTL=1

# ==================== 交易所 API 配置 ====================

# 币安
BINANCE_API_KEY=
BINANCE_API_SECRET=

# OKX
OKX_API_KEY=
OKX_API_SECRET=
