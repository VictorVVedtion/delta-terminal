# Order Executor 环境变量配置示例

# ==================== 应用配置 ====================
APP_NAME="Delta Terminal - Order Executor"
APP_VERSION="0.1.0"
DEBUG=false
HOST=0.0.0.0
PORT=8003

# ==================== 数据库配置 ====================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/delta_orders

# ==================== Redis 配置 ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=2
REDIS_PASSWORD=

# ==================== 交易所配置 ====================
# Binance
EXCHANGE_API_KEY=your_api_key_here
EXCHANGE_SECRET=your_secret_here
DEFAULT_EXCHANGE=binance

# OKX (需要 password)
# EXCHANGE_API_KEY=your_okx_api_key
# EXCHANGE_SECRET=your_okx_secret
# EXCHANGE_PASSWORD=your_okx_password
# DEFAULT_EXCHANGE=okx

# ==================== 订单执行配置 ====================
MAX_RETRY_COUNT=3
RETRY_DELAY=1.0
ORDER_TIMEOUT=30
POSITION_CHECK_INTERVAL=5.0

# ==================== TWAP 配置 ====================
TWAP_DEFAULT_SLICES=10
TWAP_DEFAULT_INTERVAL=60
TWAP_MAX_DEVIATION=0.02

# ==================== 冰山单配置 ====================
ICEBERG_DEFAULT_VISIBLE_RATIO=0.1
ICEBERG_MIN_ORDER_SIZE=10.0

# ==================== 风险控制配置 ====================
MAX_ORDER_VALUE=100000.0
MAX_POSITION_SIZE=500000.0
MAX_DAILY_TRADES=1000

# ==================== 监控配置 ====================
METRICS_ENABLED=true
METRICS_PORT=9003

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
LOG_FORMAT=json
